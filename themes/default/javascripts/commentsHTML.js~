$(document).ready(function() {
    
    var comments = {
       'Dig': 'Ystävän puhuttelumuoto, jossa käytetään isoa alkukirjainta.',
       'Ridvala': 'Nykykirjoitusmuodossa Ritvala. Paikkakunta Hämeessä.',
       'Ticklén': 'Johan Fredrik Ticklén (1802 - 1844). Raahen piirilääkäri, kirjastoamanuenssi.'
    };

    $.each(comments, function(key, value) {
       $('.exhibit1')
       .html($('.exhibit1')
       .html()
       .replace(key, '<a class="tooltip" href="#">' + key + '<span>' + value + '</span></a>')); 
       
   });

});
       

